<%= turbo_frame_tag dom_id(task) do %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= form_with model: task, data: { controller: "tasks", action: "input->tasks#toggle" }, method: :patch, class: "d-inline" do |form| %>
    <%= form.check_box :completed, checked: task.completed, data: { id: task.id, tasks_target: "checkbox" }, class: "form-check-input me-2 task-checkbox" %>
    <%= content_tag :span, task.title, id: "task-title-#{task.id}", class: "flex-grow-1 #{'text-decoration-line-through text-muted' if task.completed}", data: { tasks_target: "title" } %>
  <% end %>

    <%= button_to "Remover", task_path(task), method: :delete, class: "btn btn-outline-danger" %>
  </li>
<% end %>
